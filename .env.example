# Database Configuration
DATABASE_URL=mysql+aiomysql://wes_user:wes_password@localhost:3306/wes_db

# Storage Configuration
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=/var/wes/storage

# Workflow Executor Configuration
WORKFLOW_EXECUTOR=local  # Options: local, omics
S3_BUCKET_NAME=wes-workflows
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# AWS Omics Configuration
OMICS_REGION=us-east-1
OMICS_ROLE_ARN=
OMICS_OUTPUT_BUCKET=s3://your-bucket/output-path

# Authentication Configuration
AUTH_METHOD=basic
# Format: username:bcrypt_hashed_password (separate multiple with commas)
BASIC_AUTH_USERS=admin:$2b$12$KIXWf4KvZvYh4xJP0iHQKO.8KZvZ4KZvZ4KZvZ4KZvZ4KZvZ4KZvZ

# Service Configuration
SERVICE_NAME=GA4GH WES Service
SERVICE_ORGANIZATION_NAME=Your Organization
SERVICE_ORGANIZATION_URL=https://example.com
SERVICE_ENVIRONMENT=development
SERVICE_VERSION=1.1.0
SERVICE_CONTACT_URL=https://example.com/support
SERVICE_DOCUMENTATION_URL=https://example.com/docs
AUTH_INSTRUCTIONS_URL=https://example.com/auth-help

# API Configuration
API_PREFIX=/ga4gh/wes/v1
CORS_ORIGINS=*
HOST=0.0.0.0
PORT=8000

# Daemon Configuration
DAEMON_POLL_INTERVAL=5
DAEMON_MAX_CONCURRENT_RUNS=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Supported Workflow Types
SUPPORTED_WES_VERSIONS=1.0.0,1.1.0
WORKFLOW_TYPE_VERSIONS_CWL=v1.0,v1.1,v1.2
WORKFLOW_TYPE_VERSIONS_WDL=1.0,draft-2
WORKFLOW_ENGINE_VERSIONS_cwltool=3.1.20240116213856
SUPPORTED_FILESYSTEM_PROTOCOLS=file,http,https,s3

# File Upload Limits
MAX_UPLOAD_SIZE_MB=1024
MAX_ATTACHMENT_COUNT=100
