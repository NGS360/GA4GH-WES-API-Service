# Database Configuration
DATABASE_URI=postgresql://user:password@localhost/wes

# Daemon Configuration
DAEMON_POLL_INTERVAL=300
DAEMON_STATUS_CHECK_INTERVAL=300
DAEMON_MAX_CONCURRENT_WORKFLOWS=10

# Notification Server Configuration
DAEMON_NOTIFICATION_HOST=localhost
DAEMON_NOTIFICATION_PORT=5001

# SevenBridges/Velsera Configuration
SEVENBRIDGES_API_TOKEN=your-token-here
SEVENBRIDGES_API_ENDPOINT=https://api.sbgenomics.com/v2
SEVENBRIDGES_PROJECT=your-project-id

# AWS HealthOmics Configuration
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
AWS_HEALTHOMICS_WORKFLOW_ROLE_ARN=arn:aws:iam::123456789012:role/workflow-role
AWS_HEALTHOMICS_OUTPUT_URI=s3://your-bucket/outputs

# Arvados Configuration
ARVADOS_API_HOST=arvados.example.com
ARVADOS_API_TOKEN=your-arvados-token
ARVADOS_PROJECT_UUID=your-project-uuid

# Logging Configuration
FLASK_DEBUG=0